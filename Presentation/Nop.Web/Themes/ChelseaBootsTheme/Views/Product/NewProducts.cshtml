@model NewProductsModel
@{
	Layout = "~/Views/Shared/_ColumnsOne.cshtml";

	//title
	Html.AddTitleParts(T("PageTitle.NewProducts").Text);
}
@using Nop.Web.Models.Catalog;

@*<div class="col-md-2">
	@Html.Partial("../Catalog/_LeftSide", Model.PagingFilteringContext)
</div>*@
@*<div class="col-md-10">*@
	<div class="panel panel-default form-panel">

		<div class="panel-heading">
			<div class="alignright">
				<a href="@Url.RouteUrl("NewProductsRSS")" class="pull-right header-rss" title="@T("Products.NewProducts.RSS.Hint")">
					<i class="fa fa-rss fa-2x"></i>
				</a>
			</div>
			<h3>@T("Products.NewProducts")</h3>
		</div>
		<div class="panel-body">
			<div class="page-body">
				@if (Model.Products.Count > 0)
				{
				<div id="products-container">
					@Html.Partial("../Catalog/_ProductsGrid", Model.Products)
				</div>
				}

				<div class="pager">
					@Html.Pager(Model.PagingFilteringContext).QueryParam("pagenumber")
				</div>
			</div>
		</div>

	</div>
@*</div>*@