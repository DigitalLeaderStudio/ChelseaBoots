@model CheckoutCompletedModel
@using Nop.Web.Models.Checkout;
@{
	Layout = "~/Views/Shared/_ColumnsOne.cshtml";

	//title
	Html.AddTitleParts(T("PageTitle.Checkout").Text);
}
@if (!Model.OnePageCheckoutEnabled)
{
	@Html.Action("CheckoutProgress", "Checkout", new { step = CheckoutProgressStep.Complete })
}

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default form-panel">
				<div class="panel-heading">
					<h3>@T("Checkout.ThankYou")</h3>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12 cart-box-wr">
							<div class="coupon-box offer offer-default order-completed">
								<div class="title"><strong>@T("Checkout.YourOrderHasBeenSuccessfullyProcessed")</strong></div>
								<div class="hint">
									<div>
										@T("Checkout.OrderNumber"): @Model.OrderId
									</div>
									<br />
									<div class="row">
										<div class="col-md-12">
											<a class="btn btn-default" href="@Url.RouteUrl("OrderDetails", new { orderID = Model.OrderId })">@T("Checkout.PlacedOrderDetails")</a>
										</div>
										<div class="col-md-12">
											<input type="button" value="@T("Checkout.ThankYou.Continue")" class="btn btn-primary" onclick="setLocation('@Url.RouteUrl("HomePage")')" />
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
