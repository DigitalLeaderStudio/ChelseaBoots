@model Nop.Web.Models.ShoppingCart.WishlistModel
@{
	Layout = "~/Views/Shared/_ColumnsOne.cshtml";

	//title
	Html.AddTitleParts(T("PageTitle.Wishlist").Text);
}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default form-panel">
				<div class="panel-heading">
					<h3>@T("Wishlist")</h3>
				</div>
				<div class="panel-body">
					@if (Model.IsEditable && Model.Items.Count > 0)
					{@Html.Partial("../Catalog/_ProductsGrid", Model.Items.Select(item => item.ProductOverview).ToList())

						<div class="share-info">
							<div class="share-icon">
								<a href="@Url.RouteUrl("Wishlist", new { customerGuid = Model.CustomerGuid })" class="share-link">@Url.RouteUrl("Wishlist", new { customerGuid = Model.CustomerGuid }, "http")</a>
							</div>
						</div>
					}
					else
					{
						@T("Wishlist.CartIsEmpty")
					}
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(function () { wishlist.removeFromDom(true); });
</script>
